FROM ubuntu:22.04

# Install common dependencies for all microservices
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    pkg-config \
    libprotobuf-dev \
    protobuf-compiler \
    libjsoncpp-dev \
    git \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy common files that all services need
COPY protos/*.proto /app/protos/
COPY *.h /app/ 